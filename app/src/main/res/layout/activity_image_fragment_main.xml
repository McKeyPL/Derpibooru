<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <!-- it is important for ImageView to be the first child, otherwise
    other views do not receive onClick events (even despite the
    "clickable=true" attribute set -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"/>
    <derpibooru.derpy.ui.views.AccentColorProgressBar
        android:id="@+id/progressImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <derpibooru.derpy.ui.views.imagedetailedview.ImageDetailedView
        android:id="@+id/imageDetailedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
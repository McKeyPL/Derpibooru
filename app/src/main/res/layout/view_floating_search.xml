<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/topLayout"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/searchViewLayout">
        <!-- TODO: IMPORTANT there seems to be a bug with the layout
        inflater or my code (probably the latter) that causes the whole view
        to have a weird appearance with this LinearLayout being nested in the main
        LinearLayout (see class inheritance?)
        right now, the dirty solution of wrapping it in a RelativeLayout is used -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <!-- focusable and focusableInTouchMode
            to prevent EditText from receiving focus on startup -->
            <ImageView
                android:id="@+id/buttonSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search_white_24dp"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
            <EditText
                android:id="@+id/textSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorTextLight"
                android:hint="@string/text_search"
                android:textColorHint="@color/colorTextLight"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:paddingRight="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View style="@style/Divider"
          android:id="@+id/viewRecentSearchDivider"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/viewRecentSearch"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
<!-- TODO: Optimize (simplify) the layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorImageToolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/buttonInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:background="@drawable/toolbar_button_selector">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="i"
                android:background="@drawable/toolbar_button_selector"
                android:scaleType="fitCenter"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/colorImageToolbarText"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonFave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:background="@drawable/toolbar_button_selector">

            <ImageView
                android:id="@+id/imgFave"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_empty"
                android:background="@drawable/toolbar_button_selector"
                android:scaleType="fitCenter"
                android:paddingLeft="0dp"
                android:paddingTop="11dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textFaves"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="1400"
                android:background="@drawable/toolbar_button_selector"
                android:scaleType="fitCenter"
                android:gravity="center_vertical"
                android:textColor="@color/colorImageToolbarText"
                android:textSize="16sp"
                android:paddingTop="1dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonComments"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:background="@drawable/toolbar_button_selector">

            <ImageView
                android:id="@+id/imgComments"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/comments"
                android:background="@drawable/toolbar_button_selector"
                android:scaleType="fitCenter"
                android:paddingLeft="0dp"
                android:paddingTop="11dp"
                android:paddingRight="0dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textComments"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="1400"
                android:background="@drawable/toolbar_button_selector"
                android:scaleType="fitCenter"
                android:gravity="center_vertical"
                android:textColor="@color/colorImageToolbarText"
                android:textSize="16sp"
                android:paddingTop="1dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

<!-- TODO: Optimize (simplify) the layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@color/colorImageToolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/buttonUpvote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:background="@drawable/toolbar_button_selector">

            <ImageView
                android:id="@+id/imgUpvote"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_empty_up"
                android:scaleType="fitCenter"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:background="@drawable/toolbar_button_selector"/>

            <TextView
                android:id="@+id/textUpvotes"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2800"
                android:scaleType="fitCenter"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextLight"
                android:textSize="16sp"
                android:paddingTop="1dp"
                android:background="@drawable/toolbar_button_selector"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textScore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_height="match_parent"
            android:text="1766"
            android:background="@color/colorImageToolbar"
            android:scaleType="fitCenter"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorTextLight"
            android:textSize="30sp"
            android:paddingTop="1dp"/>

        <LinearLayout
            android:id="@+id/buttonDownvote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:background="@drawable/toolbar_button_selector">

            <ImageView
                android:id="@+id/imgDownvote"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_empty_down"
                android:scaleType="fitCenter"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:background="@drawable/toolbar_button_selector"/>

            <TextView
                android:id="@+id/textDownvotes"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1034"
                android:scaleType="fitCenter"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextLight"
                android:textSize="16sp"
                android:paddingTop="1dp"
                android:background="@drawable/toolbar_button_selector"
                android:paddingLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

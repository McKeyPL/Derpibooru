<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="?attr/actionBarSize">
    <!-- the top margin prevents the view from overlapping activity's toolbar -->
    <derpibooru.derpy.ui.views.AccentColorProgressBar
        android:id="@+id/progressTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    <ScrollView android:id="@+id/layoutRoot"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/textTag"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_activity_text_title_margin"
                android:textSize="@dimen/image_activity_text_title_size"
                android:text="Tag Name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_activity_tag_fragment_item_margin"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/viewTagImage"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginRight="30dp"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/buttonSearch"
                    android:src="@drawable/ic_search_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textTagShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_activity_tag_fragment_item_margin"
                android:gravity="center"
                android:text="Short description"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layoutUserActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_activity_tag_fragment_item_margin"
                android:gravity="center">
                <!--to be added soon
                <Button
                    android:text="Spoiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>-->
            </LinearLayout>
            <TextView
                android:id="@+id/textTagDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_activity_tag_fragment_item_margin"
                android:gravity="center"
                android:text="Detailed description"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
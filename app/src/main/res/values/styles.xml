<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- http://stackoverflow.com/a/33000467/1726690 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- sets unselected CheckBox border (apparently there's no other way; custom styles set
        for AppCompatCheckBox having this parameter do not change anything) -->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
    </style>
    <style name="TextInput" parent="TextAppearance.AppCompat">
        <!-- http://stackoverflow.com/a/30914037/1726690 -->
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="colorAccent">@color/colorTextLight</item>
        <item name="colorControlNormal">@color/colorTextLight</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- fixes layout designer error messages -->
        <item name="android:textColorHighlight">@color/colorTextLight</item>
        <item name="android:textColorLink">@color/colorTextLight</item>
    </style>
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTabTextSelected</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorTabTextUnselected</item>
    </style>
    <!-- used in FloatingSearchView -->
    <style name="Divider">
        <!-- http://stackoverflow.com/a/14533085/1726690 -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <!-- image tags -->
    <style name="ImageTag" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ImageTagArtist" parent="ImageTag">
        <item name="android:textColor">@color/colorImageArtistTagText</item>
    </style>
    <style name="ImageTagArtistActive" parent="ImageTag">
        <item name="android:textColor">@color/colorImageArtistTagTextActive</item>
    </style>
    <style name="ImageTagSpoilerWarning" parent="ImageTag">
        <item name="android:textColor">@color/colorImageSpoilerWarningTagText</item>
    </style>
    <style name="ImageTagSpoilerWarningActive" parent="ImageTag">
        <item name="android:textColor">@color/colorImageSpoilerWarningTagTextActive</item>
    </style>
    <style name="ImageTagContentSafety" parent="ImageTag">
        <item name="android:textColor">@color/colorImageContentSafetyTagText</item>
    </style>
    <style name="ImageTagContentSafetyActive" parent="ImageTag">
        <item name="android:textColor">@color/colorImageContentSafetyTagTextActive</item>
    </style>
    <style name="ImageTagOC" parent="ImageTag">
        <item name="android:textColor">@color/colorImageOCTagText</item>
    </style>
    <style name="ImageTagOCActive" parent="ImageTag">
        <item name="android:textColor">@color/colorImageOCTagTextActive</item>
    </style>
    <style name="ImageTagGeneral" parent="ImageTag">
        <item name="android:textColor">@color/colorImageGeneralTagText</item>
    </style>
    <style name="ImageTagGeneralActive" parent="ImageTag">
        <item name="android:textColor">@color/colorImageGeneralTagTextActive</item>
    </style>
    <style name="ImageTagNumberOfImages" parent="ImageTag">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- splash screen -->
    <style name="AppTheme.SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <!-- base theme extensions -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>

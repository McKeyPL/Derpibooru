<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- http://stackoverflow.com/a/33000467/1726690 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">@color/colorTabTextSelected</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorTabTextUnselected</item>
    </style>

    <style name="Divider">
        <!-- http://stackoverflow.com/a/14533085/1726690 -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ImageTagArtist" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorImageArtistTagText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageTagContentSafety" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorImageContentSafetyTagText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageTagGeneral" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorImageGeneralTagText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageTagNumberOfImages" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
